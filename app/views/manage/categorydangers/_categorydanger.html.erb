<table id='tablecat'>

  <tr class='<%= cycle('even', 'odd') %>'>
        
    <td id='title'><%= link_to categorydanger.title, manage_categorydanger_path(categorydanger) %></td>
   
  <% if can? :all, Category %>
    <td id='add'><%= link_to t('Add'), new_manage_categorydanger_path(:parent_id => categorydanger) %></td>
    <td id='edit'><%= link_to t('Edit'), edit_manage_categorydanger_path(categorydanger) %></td>
    <td id='destroy'><%= link_to t('Destroy'), manage_categorydanger_path, confirm: t('Are you sure?'), method: :delete %></td>
  <% end %>

</table>
