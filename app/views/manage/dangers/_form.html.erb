<%= semantic_nested_form_for @danger, :url => manage_danger_path, :html => { :multipart => true } do |f| %>

  <%= f.input :title %>   
  <%= f.input :body, :as => :text %>   
  
  <%= f.input :tasks, :as => :check_boxes %> 
  
  <%= f.input :categorydangers,
              :as => :check_boxes,
              :member_label => ->(c) { ('--' * c.depth + c.title).html_safe } %>
  
  <%= f.action :submit, :as => :button, :button_html => { :class => 'button spade'} %>
  <%= f.action :cancel, :as => :link, :button_html => { :class => 'button light'} %>
  
<% end %>



