<% @criterions.each do |criterion| %>
  <tr>
    <td><%= criterion.title %></td>
    <td><%= criterion.body %></td>
    <td><% criterion.tasks.each do |task| %>
      <%= task.title %><br />
    <% end %></td>
    <td><%= link_to t('Show'), criterion %></td>
    <td><%= link_to t('Edit'), edit_criterion_path(criterion) %></td>
    <td><%= link_to t('Destroy'), criterion, confirm: t('Are you sure?'), method: :delete %></td>
  </tr>
<% end %>
</table>




