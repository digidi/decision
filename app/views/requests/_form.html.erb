
<%= semantic_form_for [@task, @request] do |f| %>

  <%= f.input :title %>   
  <%= f.input :body, :as => :text %>   
   
  <%= f.action :submit, :as => :button, :button_html => { :class => 'button spade'} %>
  <%= f.action :cancel, :as => :link, :button_html => { :class => 'button light'} %> 
  
<% end %>




