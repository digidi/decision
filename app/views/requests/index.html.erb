<% if Request.all.size.eql? 0 %>
  <i><h4>Нет задач</h4></i>
<% else %>
  
  <h3><%= p("Класс задач: ") + @task.title %></h3>

  <h4><%=t("Ваши задачи")%> </h4>
  <% @requests.each do |request| %>
    <table>
    <tr>
    <% if can? :read, Request %>
      <td class='cr_re'><%= link_to request.title, task_request_path(@task, request) %></td>
    <% end %>  
    </tr>
    </table>
  <% end %>

<% end %>

<br />
<%= link_to t('Новая задача'), new_task_request_path(@task), :class => 'button spade'  %>



