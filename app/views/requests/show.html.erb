<div class="content">

<p><h3><%= link_to @request.title, edit_task_request_path(@task, @request)  %></h3></p>

<p>
  <h4><%=t("Body")%></h4>
  <% if @request.body.eql? ""%>
    <i><%=t("Нет описания")%></i> 
  <% else %>
    <%= @request.body %>
  <% end %>
</p>

<% if @request.criterions.size.eql? 0 %>
  <h4>Критерии не определены</h4>
<% else %>
  <h4>Список критериев</h4> 
  <table>
    <% @request.criterion_requests.each do |criterion_request| %>
      <tr class='cr_re'>  
        <td><%= link_to Criterion.find_by_id(criterion_request.criterion_id).title, edit_task_request_criterion_request_path(@task, @request, criterion_request) %></td>
        <td><%= criterion_request.value %></td>
        <td id="destroy"><%= link_to t('Destroy'), task_request_criterion_request_path(@task, @request, criterion_request), confirm: t('Are you sure?'), method: :delete %></td>
      </tr>
    <% end %>
  </table>
<% end %>
<%= link_to t('Добавить критерий'), new_task_request_criterion_request_path(@task, @request), :class => 'button spade' %>

<%= link_to t('Back'), task_requests_path(@task), :class => 'button light' %>
</div>

</div>


