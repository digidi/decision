<% if @user.roles.exclude? "expert" %>

<p><h3><%= link_to @request.title, edit_task_request_path(@task, @request)  %></h3></p>

<div class='textbody'>
  <h4><%=t("Body")%></h4>
  <% if @request.body.eql? ""%>
    <i><%=t("Нет описания")%></i> 
  <% else %>
    <%= @request.body %>
  <% end %>
</div>

<%= render 'user' %>

<% else %>

<p><h3><%= @request.title %></h3></p>

<div class='textbody'>
  <h4><%=t("Body")%></h4>
  <% if @request.body.eql? ""%>
    <i><%=t("Нет описания")%></i> 
  <% else %>
    <%= @request.body %>
  <% end %>
</div>
<div class='textbody'>
  <h4><%=t("Коментарий")%></h4>
  <% if @request.request_users.find_by_user_id(current_user.id).value.blank? %>
    <i><%= link_to ("Нет коментария"), edit_task_request_request_user_path(@task, @request, @request.request_users.find_by_user_id(current_user.id)) %></i> 
  <% else %>
    <%= link_to @request.request_users.find_by_user_id(current_user.id).value, edit_task_request_request_user_path(@task, @request, @request.request_users.find_by_user_id(current_user.id)) %>
  <% end %>
</div>

<%= render 'formexpert' %>

<% end %>


