<%= semantic_form_for [@task, @request, @criterion_request] do |f| %>
  
  <%= f.input :criterion, :collection => Criterion.all %>   
  
  <%= f.input :value, :as => :string %><br />
  
  <%= f.action :submit, :as => :button, :button_html => { :class => 'button spade'} %>
  <%= f.action :cancel, :as => :link, :button_html => { :class => 'button light'} %> 
  
<% end %>




