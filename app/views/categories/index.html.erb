
<table>
  <tr>
    <th><%=t("Title")%></th>
    <th><%=t("Body")%></th>
    <th><%=t("Criterions")%></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr class='<%= cycle('even', 'odd') %>'>
        
    <td><%= category.title %></td>
    <td><%= category.body %></td>
    <td><% category.criterions.each do |criterion| %>
      <%= criterion.title %><br />
    <% end %></td>
    
    <td><%= link_to t('Edit'), edit_category_path(category) %></td>
    <td><%= link_to "Reply", new_category_path(:parent_id => category) %></td>
    <td><%= link_to t('Destroy'), category, confirm: t('Are you sure?'), method: :delete %></td>

  </tr>
<% end %>
</table>

<br />

