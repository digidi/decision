<%= semantic_form_for [@task, @request, @expert] do |f| %>
   
  <%= f.input :users, 
              :as => :check_boxes, 
              :collection =>  Hash[User.where(:roles_mask => (4..7)).map{|b| [b.fio,b.id]}] %>   
  

                  
  <%= f.action :submit, :as => :button, :button_html => { :class => 'button spade'} %>
  <%= f.action :cancel, :as => :link, :button_html => { :class => 'button light'} %> 
  
<% end %>


